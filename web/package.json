{
  "version": "1.0.0",
  "author": {
    "name": "Maksim Novoseltsev"
  },
  "description": "React app",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch src/server src/server",
    "start": "cross-env NODE_ENV=production node build/server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack -p --progress --config=config/webpack.config.prod.js",
    "build:server": "cp -r src/server build/",
    "db-drop": "dropdb messenger",
    "db-create": "createdb messenger",
    "db-role": "psql -f db/create-role.sql messenger",
    "db-tables": "psql -f db/create-tables.sql messenger",
    "api-test": "node tests/api/channels.js && node tests/api/users.js && node tests/api/user_in_channel.js && node tests/api/messages.js",
    "db": "npm run db-drop > /dev/null; npm run db-role 2> /dev/null; npm run db-create && npm run db-tables && npm run api-test"
  },
  "dependencies": {
